<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:padding="3dp"
    tools:context=".PretestResults">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PreOutOf"
            android:textSize="40sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="You got 12 out of 12 questions correct"/>

        <ImageView
            android:id="@+id/PreGrade"
            android:src="@drawable/score_high"
            android:layout_width="wrap_content"
            android:layout_height="430dp"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:layout_below="@+id/PreOutOf"/>

        <Button
            android:id="@+id/EducationButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/PreGrade"
            android:layout_centerHorizontal="true"
            android:text="Educational Materials" />

    </RelativeLayout>
</ScrollView>